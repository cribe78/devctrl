{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    //"module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib" : ["es2015", "dom"],
    //"lib": ["dom"],
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ],

  "files": [
    "app/app.module.ts",
    "app/main.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": true
  }
}