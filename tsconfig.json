{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    //"module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib" : ["es2015", "dom"],
    //"lib": ["dom"],
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "app/*"]
    }
  },
  "exclude": [
    "node_modules", "aot", "app/main.ts"
  ]
}