{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    //"module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib" : ["es2015", "dom"],
    //"lib": ["dom"],
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "hammerjs"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}